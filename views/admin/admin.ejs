<!DOCTYPE html>
<html>
  <% include ../includes/index_header %>
  <body>
    <% include ../includes/index_navbar %>
    <div class="container-fluid">
      <div class="row">
        <% include ../includes/admin/admin_navbar_left %>
        <div class="col-sm-8 nav-buffer">
          <div class="well well-style">
            <div class="text-center">
              <% if (activities.length === 0) { %>
                  No activities found
              <% } else if (activities[0].error) { %>
                  <%= activities[0].error %>
              <% } else { %>
                  <% for (var i = 0; i < activities.length; i++) { %>
                      <% if (activities[i].action === "remove") { %>
                        <h5>
                          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                          <%= activities[i].message %>
                        </h5>
                      <% } else if (activities[i].action === "edit") { %>
                        <h5>
                          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                          <%= activites[i].message %>
                        </h5>
                      <% } else if (activities[i].action === "add") { %>
                        <h5>
                          <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                          <%= activities[i].message %>
                        </h5>
                      <% } %>
                  <% } %>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% include ../includes/index_footer %>
  </body>
</html>