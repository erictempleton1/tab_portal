<!DOCTYPE html>
<html>
  <% include includes/index_header %>
  <body>
    <% include includes/index_navbar %>
    <div class="container">
        <p>Login</p>
        <%- messages() %>
        <form id="loginForm" method="POST" action="/login">
            <p>
                <label>Username:</label>
                <input type="text" name="username" required="" data-parsley-error-message="Please Enter Username">
            </p>
            <p>
                <label>Password:</label>
                <input type="password" name="password" required="" data-parsley-error-message="Please Enter Password">
            </p>
            <p>
                <input type="submit" value="Log In">
            </p>
        </form>
    </div>
    <% include includes/index_footer %>
    <script src="/javascripts/parsley.min.js"></script>
</body>
<script type="text/javascript">
  $('#loginForm').parsley();
</script>
</html>